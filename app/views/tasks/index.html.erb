<h1>タスク一覧</h1>
<%= link_to '新しいタスクを作成', new_task_path %>
<ul>
  <% @tasks.each do |task| %>
    <li>
      <%= link_to task.title, task_path(task) %><br>
      <%= link_to '編集', edit_task_path(task) %> |
      <%= link_to '削除', task_path(task), data: { turbo_method: :delete, turbo_confirm: '削除してよろしいですか？' } %>
    </li>
  <% end %>
</ul>